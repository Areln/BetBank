
@{
    ViewData["Title"] = "UpdateBet";
}

@model RecordOfBets
<h1 style="text-align:center">Update Bet</h1>

<div class="topnav" id="myTopnav">
    <a href="../Home/Index">Home</a>
    <a href="../Event/NFLIndex">NFL</a>
    <a href="../Event/NBAIndex">NBA</a>
    @*<a href="../Event/ESportsIndex">E-Sports</a>*@
</div>
<form>
    <div class="form-group row">
        <label for="BetType" class="col-sm-2 col-form-label">Bet Type</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="BetType" placeholder="@Model.BetType" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="AmountBet" class="col-sm-2 col-form-label">Amount Bet</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="AmountBet" placeholder="@Model.AmountBet">
        </div>
    </div>
    <input type="hidden" value="@Model.BetId" />
    <input type="hidden" value="@Model.UserId" />
    <input type="hidden" value="@Model.EventId" />
    <input type="hidden" value="@ViewBag.Id" />
    <input type="hidden" value="@Model.EventDate" />
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Update Bet</button>
        </div>
    </div>
</form>

